    <style type="text/css">

      .well {
        background: white;
      }
      .li{
          display: inline-block;
          max-width:90%; /* limit width */
          word-break:break-all; /* wrap extended text*/
          border:1px solid red /* demo */
      }
      .dropdown-submenu {
          position:relative;
      }
      .dropdown-submenu>.dropdown-menu {
          top:0;
          left:100%;
          margin-top:-6px;
          margin-left:-1px;
          -webkit-border-radius:0 6px 6px 6px;
          -moz-border-radius:0 6px 6px 6px;
          border-radius:0 6px 6px 6px;
      }
      .dropdown-submenu:hover>.dropdown-menu {
          display:block;
      }
      .dropdown-submenu>a:after {
          display:block;
          content:" ";
          float:right;
          width:0;
          height:0;
          border-color:transparent;
          border-style:solid;
          border-width:5px 0 5px 5px;
          border-left-color:#cccccc;
          margin-top:5px;
          margin-right:-10px;
      }
      .dropdown-submenu:hover>a:after {
          border-left-color:#ffffff;
      }
      .dropdown-submenu.pull-left {
          float:none;
      }
      .dropdown-submenu.pull-left>.dropdown-menu {
          left:-100%;
          margin-left:10px;
          -webkit-border-radius:6px 0 6px 6px;
          -moz-border-radius:6px 0 6px 6px;
          border-radius:6px 0 6px 6px;
      }

      /* overwrite bootsrap ------------------------*/
      .nav-pills>li { float:none; }
      .nav-pills>li>a { border-radius: 0; }
      .nav-pills>li+li { margin-left: 0; }
      pre { border:0;}

      /* ------------------------*/
      body{ padding-top:70px }
      h4,p { font-size:1.7rem; line-height:2.5rem; } /* this somehow used as <p> so add line-height */

      /*.sep-line { border-bottom:1px solid #eee; padding-bottom:15px; margin-bottom:20px; }*/
      .left-side { padding:0 10px 10px 10px; }
      .right-side { padding:0 10px 10px 10px;  }
      .left-side .nav { border:1px solid #e1e1e1; padding:15px 10px;
                        border-radius:3px; box-shadow:0 2px 6px 0 rgba(0,0,0,0.06); font-size:1.5rem; }

      @media (min-width: 768px) {
          .left-side { padding:0 15px; width: 25%; float:left; position:fixed; }
          .right-side { padding:0 15px; width: 75%;  float:right; }
      }

    </style>
  </head>

